{
  "name": "imarc-boilerplate",
  "version": "5.0.9",
  "description": "A light, customizable frontend starter kit and component library",
  "author": "Imarc",
  "license": "Apache-2.0",
  "bin": "./boilerplate.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imarc/boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/imarc/boilerplate/issues"
  },
  "homepage": "https://github.com/imarc/boilerplate#readme",
  "scripts": {
    "fractal": "fractal",
    "dev": "vite",
    "prod": "vite build",
    "build": "npm run prod && npm run fractal build"
  },
  "dependencies": {
    "@frctl/fractal": "^1.5.4",
    "@frctl/twig": "^1.2.6",
    "@vitejs/plugin-vue": "^1.4.0",
    "@vue/compat": "^3.2.4",
    "@vue/compiler-sfc": "^3.2.4",
    "candlepin": "^1.3.4",
    "cross-env": "^7.0.2",
    "expose-loader": "^3.0.0",
    "fractal-theme-hydrogen": "^1.0.4",
    "import-glob-loader": "^1.1.0",
    "jquery": "^3.5.1",
    "jsonfile": "^6.0.1",
    "laravel-mix": "^6.0.11",
    "laravel-mix-purgecss": "^6.0.0",
    "lazysizes": "^5.3.2",
    "mmenu-light": "^3.0.8",
    "normalize-scss": "^7.0.1",
    "npm": "^7.16.0",
    "resolve-url-loader": "^4.0.0",
    "sass-loader": "^12.0.0",
    "slick-carousel": "^1.8.1",
    "swiper": "^6.7.0",
    "vite": "^2.5.0",
    "vue": "^3.2.4"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.6.0",
    "postcss": "^8.2.6",
    "sass": "^1.34.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.6"
  },
  "browserslist": [
    "defaults",
    "ie 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "plugin:vue/vue3-recommended",
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "rules": {
      "comma-dangle": [
        "warn",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "never",
          "exports": "never",
          "functions": "never"
        }
      ],
      "indent": [
        "warn",
        4
      ],
      "vue/html-indent": [
        "warn",
        4
      ]
    }
  }
}

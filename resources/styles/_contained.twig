<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{ _target.title }} ({{ _target.handle }}) - Pattery Library</title>

    {% if not _config.viteServer %}
        {% for file in manifestAssets('resources/js/main.js', 'css') %}
            <link rel="stylesheet" href="/assets/{{ file }}">
        {% endfor %}
    {% endif %}
</head>
<body>
    <div id="root">
        <main style="padding: 40px">
            {{ yield }}
        </main>
    </div>


    {% if _config.viteServer %}
        <script type="module" src="http://localhost:3000/@vite/client"></script>
        <script type="module" src="http://localhost:3000/resources/js/main.js"></script>
    {% else %}
        {% for file in manifestAssets('resources/js/main.js', 'js') %}
            <script defer src="/assets/{{ file }}"></script>
        {% endfor %}
    {% endif %}

</body>
</html>
